<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <style>
            .navbar {
                position: absolute;
                left: 50%;
                transform: translatex(-50%);
            }
        </style>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Bottify</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
           {% if app.user %}
               <div class="collapse navbar-collapse" id="navbarNav">
                   <ul class="navbar-nav">
                       <li class="nav-item">
                           <a class="nav-link" href="{{ path('my_cart')}}">My Cart</a>
                       </li>
                        <li class="nav-item">
                           <a class="nav-link" href="{{ path('my_wishlist')}}">My WishList</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link" href="/item">Products</a>
                       </li>
                   </ul>
               </div>
           {% endif %}

           {% if not app.user %}
               <div class="collapse navbar-collapse" id="navbarNav">
                   <ul class="navbar-nav">
                       <li class="nav-item">
                           <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                       </li>
                       <li class="nav-item">
                           <a class="nav-link" href="{{ path('register') }}">Register</a>
                       </li>
                   </ul>
               </div>
           {% endif %}
        </nav>

        <br>
        <br>
        <br>
        <div class="container">
            {% block body %}{% endblock %}
            <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
