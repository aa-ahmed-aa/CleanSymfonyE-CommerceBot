{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cart.name }}</td>
            </tr>
            <tr>
                <th>Items</th>
                <td>
                    <ul>
                        {% for item in items %}
                            <li>{{ item.name }} <a href="{{ path('remove_from_cart', {id: item.id}) }}">delete</a></li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('cart_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('cart_edit', {'id': cart.id}) }}">edit</a>

    {{ include('cart/_delete_form.html.twig') }}
{% endblock %}
