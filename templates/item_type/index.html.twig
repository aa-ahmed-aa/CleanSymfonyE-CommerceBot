{% extends 'base.html.twig' %}

{% block title %}ItemType index{% endblock %}

{% block body %}
    <h1>Product Type index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item_type in item_types %}
            <tr>
                <td>{{ item_type.id }}</td>
                <td>{{ item_type.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('item_type_show', {'id': item_type.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('item_type_edit', {'id': item_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('item_type_new') }}">Create new</a>
{% endblock %}
