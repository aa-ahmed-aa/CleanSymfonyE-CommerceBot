{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ item.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img width="400" height="200" src="{{ asset('uploads/' ~ item.image) }}" alt=""></td>
            </tr>
        </tbody>
    </table>
    {% if app.user %}
        <a class="btn btn-info" href="{{ path('item_index') }}">back to list</a>

        <a class="btn btn-warning" href="{{ path('item_edit', {'id': item.id}) }}">edit</a>

        {{ include('item/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
